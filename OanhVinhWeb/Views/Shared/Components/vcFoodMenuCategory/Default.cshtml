@using WebOanhVinh.Models
@model List<ProductCategory>

<aside class="single_sidebar_widget post_category_widget">
    <h4 class="widget_title">Danh Mục Sản Phẩm</h4>
    <ul class="list cat-list">
        <li>
            <a href="san-pham" class="d-flex">
                <p>Tất cả sản phẩm</p>
            </a>
        </li>
        @foreach (var item in Model)
        {
            <li>
                <a asp-route="ProductListByCategoryID"
               asp-route-mid="@item.ProductCategoryID"
               asp-route-title="@item.Tittle"
               class="d-flex">
                    <p>@item.Tittle</p>
                </a>
            </li>
        }
    </ul>
</aside>