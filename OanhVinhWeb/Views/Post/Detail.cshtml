@using WebOanhVinh.Models
@model Post
<!-- breadcrumb start-->
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>@Model.PostTitle</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb start-->
<!--================Blog Area =================-->
<section class="blog_area single-post-area section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 posts-list">
                <div class="single-post">
                    <div class="feature-img">
                        <img class="img-fluid" src="@Model.PostImages" alt="@Model.PostALTSEO">
                    </div>
                    <div class="blog_details">
                        <h2>
                            @Model.PostTitle
                        </h2>
                        <ul class="blog-info-link mt-3 mb-4">
                            <li>
                                <a asp-route="PostListByCategoryID"
                                   asp-route-mid="@Model.PostCategoryID"
                                   asp-route-title="@Model.PostCategoryName"><i class="fa fa-th-large"></i>@Model.PostCategoryName</a>
                            </li>
                            <li><i class="far fa-user"></i> @Model.UserFullName</li>
                            <li>
                                @if (@Model.CreateTime == null)
                                {
                                    <i class="ti-calendar"> 01/01/2022</i>
                                }
                                else
                                {
                                    <i class="ti-calendar"> @Model.CreateTime.Value.Day/@Model.CreateTime.Value.Month/@Model.CreateTime.Value.Year</i>
                                }
                            </li>
                        </ul>
                        <div class="content-detail textview">
                            @Html.Raw(Model.PostDetail)
                        </div>
                    </div>
                </div>
                @*<div class="blog-author">
                    <div class="media align-items-center">
                        <img src="img/blog/author.png" alt="">
                        <div class="media-body">
                            <a href="#">
                                <h4>@Model.CreateBy</h4>
                            </a>
                            <p>
                                @Mo
                            </p>
                        </div>
                    </div>
                </div>*@
            </div>

            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <vc:vc-search/>
                    <!-- vcPostCategorySidebar -->
                    <vc:vc-post-category-sidebar />
                    <!-- vcPostRalatedSidebar -->
                    <!--Post related-->
                    <aside class="single_sideb ar_widget popular_post_widget">
                        <h3 class="widget_title">Bài Đăng Liên Quan</h3>
                        @foreach (var item in @ViewBag.PostRelated)
                        {
                            <div class="media post_item">
                                <img src="@item.PostImages" alt="@item.PostALTSEO">
                                <div class="media-body">
                                    <a asp-route="PostDetail"
                                   asp-route-mid="@item.PostCategoryID"
                                   asp-route-id="@item.PostID"
                                   asp-route-title="@item.PostTitle">
                                        <h3>@item.PostTitle</h3>
                                    </a>
                                </div>
                            </div>
                        }
                    </aside>
                    <!--Post related-->
                    <!-- vcPostActiveImgSidebar -->
                    <vc:vc-post-active-img-sidebar />
                    <!-- vcPostNewSidebar -->
                    <vc:vc-post-new-sidebar />
                </div>
            </div>
        </div>
    </div>
</section>
<!--================Blog Area end =================-->